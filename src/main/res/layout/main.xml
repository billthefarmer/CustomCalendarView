<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/month" />

    <include
        layout="@layout/week" />

    <LinearLayout
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

      <include
          layout="@layout/week_1" />

      <include
          layout="@layout/week_2" />

      <include
          layout="@layout/week_3" />

      <include
          layout="@layout/week_4" />

      <include
          layout="@layout/week_5" />

      <include
          layout="@layout/week_6" />

    </LinearLayout>

</LinearLayout>
