<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->
  </style>

  <style name="CalendarView" />

  <style name="CalendarView.MonthTitle">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CalendarView.DayOfTheWeek">
    <item name="android:textSize">14sp</item>
    <item name="android:minWidth">@dimen/minDayCellWidth</item>
    <item name="android:minHeight">@dimen/minDayCellHeight</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CalendarView.DayOfTheMonth">
    <item name="android:textSize">14sp</item>
    <item name="android:minWidth">@dimen/minDayCellWidth</item>
    <item name="android:minHeight">@dimen/minDayCellHeight</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

</resources>
